{strip}<div class="block_form">		{if $tpl_errors|count}	    	<ul class="error_message">				{$_TRANS['Please fix the following errors']}:<br/>	            {if $tpl_errors['message/support_frm'][0]=='user_not_found'}<li>{$_TRANS['Input e-mail']}</li>{/if}	            {if $tpl_errors['message/support_frm'][0]=='mail_wrong'}<li>{$_TRANS['Wrong e-mail']}</li>{/if}	            {if $tpl_errors['message/support_frm'][0]=='topic_empty'}<li>{$_TRANS['Input topic']}</li>{/if}	            {if $tpl_errors['message/support_frm'][0]=='text_empty'}<li>{$_TRANS['Input text']}</li>{/if}	        </ul>		{/if}	    <br/>	    <form method="post" action="{_link module='message/support'}" name="message/support_frm">	        {if !_uid()}	        	<div class="block_form_el cfix">	            	<label for="message/support_frm_Mail">{$_TRANS['E-Mail']}:</label>	            	<div class="block_form_el_right">	                	<input name="Mail" id="message/support_frm_Mail" value="{if ($smarty.request.Mail)}{$smarty.request.Mail}{else}{$user.uMail}{/if}" type="text">	                </div>	            </div>	        {/if}	        {if $cats}				<div class="block_form_el cfix">		        	<label for="message/support_frm_Category">{$_TRANS['Category']}:</label>		        	<div class="block_form_el_right">			            <select name="Category" id="message/support_frm_Category">			            	{foreach from=$cats item=cat}			                	<option value="{$cat}" {if $smarty.request.Category==$cat}selected{/if}>{$cat}</option>			                {/foreach}			            </select>			        </div>		        </div>	        {/if}	        <div class="block_form_el cfix">	            <label for="message/support_frm_Topic">{$_TRANS['Topic']}</label>	            <div class="block_form_el_right">	            	<input name="Topic" id="message/support_frm_Topic" value="{$smarty.request.Topic}" type="text">	            </div>	        </div>	        <div class="block_form_el cfix">	            <label for="message/support_frm_Message">{$_TRANS['Text']}</label>	            <div class="block_form_el_right">	            	<textarea name="Message" id="message/support_frm_Message" wrap="off" >{$smarty.request.Message}</textarea>	            </div>	        </div>	    	{_getFormSecurity form='message/support_frm' captcha=$_cfg.Msg_Captcha}	        {if $__Capt}	        	{include file='captcha.tpl' form='message/support_frm'}	        {/if}	    	<div class="block_form_el cfix">	        	<label for="login_frm_Pass">&nbsp;</label>	        	<div class="block_form_el_right">	            	 <input name="message/support_frm_btn" type="submit" value="{$_TRANS['Send']}" class="button-green">	            </div>	        </div>        </form>    </div>{*include file='edit.tpl'	url="{_link module='message/support'}"	fields=	[		'Mail'=>			[				'T',				'Ваш e-mail!! <<для связи>>',				[					'user_not_found'=>'укажите e-mail',					'mail_wrong'=>'неверный e-mail'				],				'skip'=>_uid(),				'default'=>$user.uMail			],		'Category'=>			[				'S',				'Категория',				0,				$cats,				'skip'=>!$cats			],		'Topic'=>			[				'L',				'Тема!!',				[					'topic_empty'=>'укажите тему'				],				'size'=>50			],		'Message'=>			[				'W',				'Текст!!',				[					'text_empty'=>'укажите текст'				],				'size'=>12,				'cols'=>60			]	]	captcha=$_cfg.Msg_Captcha	btn_text='Отправить'*}{/strip}